<Window x:Class="ActivityDesigner.Save.SaveDefinition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityDesigner.Save"
        mc:Ignorable="d"
        Title="Save Definition" Height="115.591" Width="278.494">

    <Window.Resources>

        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Width" Value="100"></Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Width" Value="160"></Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="70"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>

    </Window.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Name</Label>
            <TextBox Text="{Binding Name}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Name="cmdOK" Margin="110,5,5,5" Click="cmdOK_Click">OK</Button>
            <Button Name="cmdCancel" Click="cmdCancel_Click" >Cancel</Button>
        </StackPanel>
    </StackPanel>
   
</Window>
